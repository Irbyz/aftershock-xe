#!/bin/bash

make
cp -rf ./build/release-linux-x86_64/baseq3/vm ./content
cd content
zip zzz-oaUnofficial.pk3 -r icons/ vm/ sound/ models/ gfx/ scripts/ textures/ menu/ sprites/ hud/ levelshots/ default.cfg clown.cfg clown-full.cfg -x *.svn* -u
cp zzz-oaUnofficial.pk3 ../
cd ..
cp zzz-oaUnofficial.pk3 ../oaUnofficial/oaUnofficial/
cp zzz-oaUnofficial.pk3 ~/.openarena/oaUnofficial/
